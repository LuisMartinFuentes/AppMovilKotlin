<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cupones">


    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:translationY="20dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="𝓟𝓾𝓷𝓽𝓸𝓼"
        android:textSize="25dp"
        android:translationX="250dp"
        android:translationY="-30dp" />

    <TextView
        android:id="@+id/puntosCliente"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textColorHighlight="#151414"
        android:textColorHint="#121111"
        android:textColorLink="#0C0C0C"
        android:textSize="25dp"
        android:translationX="325dp"
        android:translationY="-60dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="𝑪𝒖𝒑𝒐𝒏𝒆𝒔"
        android:textSize="35dp"
        android:translationY="-10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCupones"
        android:layout_width="335dp"
        android:layout_height="497dp"
        android:translationX="35dp"
        android:translationY="60dp" />

    <TextView
        android:id="@+id/noCuponesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay cupones disponibles"
        android:textSize="20dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>