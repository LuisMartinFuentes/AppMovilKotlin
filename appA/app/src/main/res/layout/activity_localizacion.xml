<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Localizacion">

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:translationY="20dp"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:contentDescription="@string/image_button_description" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:text="𝓟𝓾𝓷𝓽𝓸𝓼"
        android:textSize="25sp"
        android:translationX="270dp"
        android:translationY="-20dp"
        android:contentDescription="@string/text_view_points_description"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/puntosCliente"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textColorHighlight="#151414"
        android:textColorHint="#121111"
        android:textColorLink="#0C0C0C"
        android:textSize="25dp"
        android:translationX="340dp"
        android:translationY="-55dp" />

    <TextView
        android:id="@+id/txtlatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="20dp"
        android:hint="@string/latitude_hint"
        android:importantForAccessibility="yes"
        android:contentDescription="@string/latitude_description" />

    <TextView
        android:id="@+id/txtlongitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/longitude_description"
        android:hint="@string/longitude_hint"
        android:importantForAccessibility="yes"
        android:translationY="60dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        map:cameraZoom="10"
        map:uiRotateGestures="true"
        map:uiZoomControls="true"
        android:translationY="80dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="𝑳𝒐𝒄𝒂𝒍í𝒛𝒂𝒏𝒐𝒔 𝒆𝒏 𝒆𝒔𝒕𝒂𝒔 𝒔𝒖𝒄𝒖𝒓𝒔𝒂𝒍𝒆𝒔"
        android:textSize="30sp"
        android:translationY="120dp"
        android:contentDescription="@string/text_view_location_description"
        tools:ignore="HardcodedText" />
</LinearLayout>