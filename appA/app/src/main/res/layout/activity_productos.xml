<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Productos">


    <ImageButton
        android:id="@+id/imageButton123"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:translationX="20dp"
        android:translationY="20dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:text="𝓟𝓾𝓷𝓽𝓸𝓼"
        android:textSize="25sp"
        android:translationX="270dp"
        android:translationY="-20dp"
        android:contentDescription="@string/text_view_points_description"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/puntosCliente"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textColorHighlight="#151414"
        android:textColorHint="#121111"
        android:textColorLink="#0C0C0C"
        android:textSize="25dp"
        android:translationX="340dp"
        android:translationY="-55dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="𝓟𝓻𝓸𝓭𝓾𝓬𝓽𝓸𝓼"
        android:textSize="45dp"
        android:translationY="-40dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="329dp"
        android:layout_height="526dp"
        android:translationX="35dp"
        android:translationY="60dp" />

    <TextView
        android:id="@+id/noProductosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay productos disponibles"
        android:textSize="20dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>